# Production Environment Configuration
# Copy this file to .env and update with your production values

# Environment
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-production-secret-key-change-this-immediately

# Database Configuration
DATABASE_URL=postgresql://postgres:your-postgres-password@postgres:5432/api_testing
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
ENABLE_RAG=true
CHROMADB_PERSIST_DIR=/app/data/chromadb

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=300
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Test Execution
MAX_CONCURRENT_TESTS=20
DEFAULT_TIMEOUT=30
RETRY_ATTEMPTS=3
MAX_RESPONSE_SIZE=10485760  # 10MB

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
WORKER_CONCURRENCY=4

# Reinforcement Learning
RL_LEARNING_RATE=0.01
RL_EXPLORATION_RATE=0.1
RL_DISCOUNT_FACTOR=0.95
RL_MODEL_PATH=/app/data/rl_models

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_TELEMETRY=true
LOG_FILE_PATH=/app/logs/api_testing.log

# Security
CORS_ALLOW_CREDENTIALS=true
TRUSTED_HOSTS=yourdomain.com,www.yourdomain.com
RATE_LIMIT_PER_MINUTE=100

# Monitoring
PROMETHEUS_METRICS_ENABLED=true
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GRAFANA_PASSWORD=your-grafana-admin-password

# SSL/TLS (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Feature Flags
ENABLE_SELF_HEALING=true
ENABLE_RL_OPTIMIZATION=true
ENABLE_RAG_ENHANCEMENT=true
ENABLE_REAL_TIME_UPDATES=true

# Performance Tuning
CONNECTION_POOL_SIZE=20
CONNECTION_POOL_MAX_OVERFLOW=10
QUERY_TIMEOUT=30
CACHE_TTL=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_RETRIES=3
