# AI-Powered API Testing Framework - Environment Configuration Template
# Copy this file to .env and configure your settings

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (should be false in production)
DEBUG=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (PostgreSQL recommended for production)
# Development: sqlite:///./api_testing.db
# Production: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///./api_testing.db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Keys (comma-separated list of valid keys)
# Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=

# Master API key for administrative operations
MASTER_API_KEY=

# Application secret key
SECRET_KEY=

# Encryption settings for sensitive data
ENCRYPTION_PASSWORD=
ENCRYPTION_SALT=

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Development: automatically allows localhost
# Production: specify your domains
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL certificate files (required for production HTTPS)
SSL_KEYFILE=
SSL_CERTFILE=
SSL_CA_CERTS=

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# OpenAI API key for AI-powered features
OPENAI_API_KEY=

# AI rate limiting (requests per hour per user)
AI_RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Default rate limits (requests per time period)
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_API_SPEC=50/hour
RATE_LIMIT_TEST_GEN=20/hour
RATE_LIMIT_TEST_EXEC=100/hour
RATE_LIMIT_AI=200/hour

# =============================================================================
# FILE SIZE LIMITS
# =============================================================================

# Maximum file sizes in bytes
MAX_SPEC_SIZE=10485760       # 10MB - API specification size
MAX_REQUEST_SIZE=1048576     # 1MB - Request body size
MAX_UPLOAD_SIZE=5242880      # 5MB - File upload size

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file paths
LOG_FILE=./logs/api_testing.log
AUDIT_LOG_FILE=./logs/audit.log

# Log format: text (development) or json (production)
LOG_FORMAT=text

# Log file settings
LOG_MAX_SIZE=104857600       # 100MB
LOG_BACKUP_COUNT=5

# Enable audit logging
AUDIT_LOGGING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
FEATURE_AI_GENERATION=true
FEATURE_RL_OPTIMIZATION=true
FEATURE_SELF_HEALING=true
FEATURE_PARALLEL_EXECUTION=true
FEATURE_METRICS=true
FEATURE_ANALYTICS=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Generate self-signed certificate for development HTTPS testing
# (Never use in production!)
GENERATE_DEV_CERT=false

# =============================================================================
# PRODUCTION ADDITIONAL SETTINGS
# =============================================================================

# These are additional settings you may want to configure for production:

# Monitoring and alerting
# SENTRY_DSN=
# DATADOG_API_KEY=
# PROMETHEUS_ENABLED=true

# External services
# REDIS_URL=redis://localhost:6379/0
# ELASTICSEARCH_URL=http://localhost:9200

# Security scanning
# SECURITY_SCAN_ENABLED=true
# VULNERABILITY_DB_URL=

# Backup configuration
# BACKUP_ENABLED=true
# BACKUP_S3_BUCKET=
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

